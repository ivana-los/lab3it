﻿@model  mvccc.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html model.Name)
        </dt>

        <dd>
            @Html  model.Name)
        </dd>

    </dl>
</div>

@using (Html.BeginForm("AddPatient", "Doctors", FormMethod.Post))
{
    @Html.Hidden("doctorId", Model.id)
    @Html.Label("Избери пациент")
    @Html.DropDownList("patientId", (SelectList)ViewBag.AllPatients, "Избери...", new { @class = "form-control" })
    <button type="submit" class="btn btn-primary">Додади пациент</button>
}

<h4>Пациенти на докторот:</h4>
<ul>
    @foreach (var patient in Model.Patients)
    {
        <li>@Html.ActionLink(patient.Name, "Details", "Patients", new { id = patient.id }, null)</li>
    }
</ul>

